<nav class="relative container mx-auto p-6">
  <div class="flex items-center justify-between">
    <div class="pt-2">
      <h1 class="text-black font-bold text-2xl">Companies</h1>
    </div>
    <div class="flex space-x-6">
      <!-- Search Bar -->
      <div class="flex items-center bg-white rounded-full shadow-md">
  
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 pl-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
        </svg>
        <input type="text" class="py-1 px-2 rounded-full border-0">
      </div>


      <!-- Two buttons -->
      <div class="flex">
        <button id="tableViewButton" class="bg-white shadow-md py-1.5 px-3 rounded-l-20 flex items-center hover:bg-gray-300">
          <!-- SVG Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
          </svg>
        </button>
        <button id="gridViewButton" class="bg-white shadow-md py-1.5 px-3 rounded-r-20 flex items-center hover:bg-slate-300">
          <!-- SVG Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
          </svg>
        </button>
      </div>

      <button class="bg-button-color text-white text-sm py-1 px-4 rounded-full flex items-center">
        <span class="flex items-center">
    
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          <span> Add Company</span>
        </span>
      </button>

      <!-- Information symbol -->
      <div class="flex items-center p-0">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
        </svg>

      </div>
    </div>
  </div>
</nav>

<section id="main">
  <main class="container mx-auto mt-6 px-0 flex flex-wrap justify-center" id="gridView">
    <!-- Grid view content here -->
    <% @companies.each do |company| %>
      <div class="relative">
      <div class="flex justify-left items-center w-96 h-32 bg-white rounded-xl overflow-hidden mx-2 mb-4 drop-shadow-sm border-l-12 relative">
        <div class="p-5">
          <!-- Company Logo -->
          <div class="flex justify-left">
            <!-- Replace this with your image tag -->
            <%= image_tag "logos/#{company.logo}", alt: "Company Logo", class: "h-50px w-50px", style: "margin-bottom: 1rem;" %>
            <div class="ml-4">
              <h3 class="text-l font-semibold text-gray-800 mb-1"><%= company.name %></h3>
              <!-- Company Status -->
              <div class="flex items-center mb-2">
                <span class="flex items-center justify-center px-2 py-1 
                            <% if company.status == 'Inactive' %> bg-gray-400 bg-opacity-20 text-gray-400
                            <% else %> bg-status-color bg-opacity-15 text-green-800
                            <% end %> text-xs font-medium rounded-18px mr-2">
                  <%= company.status %>
                </span>
              </div>
    
              <!-- Facilities and Users -->
              <div class="flex items-center">
                <!-- Facilities -->
                <div class="mr-8 flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                    <path strokeLinecap="round" strokeLinejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
                  </svg>
                  <p class="text-gray-600 text-sm"><%= company.facilities %> Facilities</p>
                </div>
                <!-- Users -->
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                    <path strokeLinecap="round" strokeLinejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                  </svg>
                  <p class="text-gray-600 text-sm"><%= company.users %> Users</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Button in top-right corner -->
        <button class="absolute top-2 right-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM12.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM18.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
          </svg>
        </button>
      </div>
    </div>
    
    <% end %>
  </main>

  <main class="container mx-auto mt-6 px-5 flex flex-wrap justify-center hidden" id="tableView">
  <!-- Table view content here -->
  <table class="w-full border-collapse border border-gray-200 rounded-xl shadow-lg overflow-hidden">
    <thead class="bg-gray-100">
      <tr>
        <th class="border px-4 py-2 text-left ml-4"><input type="checkbox" class="form-checkbox h-4 w-4 text-gray-400 mr-4"> Company Name</th>
        <th class="border px-2 py-2 w-180px text-left">Facilities</th>
        <th class="border px-2 py-2 w-180px text-left">Employees</th>
        <th class="border px-4 py-2 w-14 content-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
          </svg>
        </th>
      </tr>
    </thead>
    <tbody class="bg-white">
      <% @companies.each do |company| %>
      <tr>
        <td class="border p-2">
          
          <div class="flex items-center">
            <input type="checkbox" class="form-checkbox h-4 w-4 text-gray-400 ml-2"> 
            <span class="mx-4 "><%= image_tag "logos/#{company.logo}", alt: "Company Logo", class: "h-8 w-8" %></span>
            <span class="text-base"><%= company.name %></span>
          </div>
        </td>
        <td class="border p-2">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
              <path strokeLinecap="round" strokeLinejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
            </svg>
            <span class="text-sm"><%= company.facilities %> facilities</span>
          </div>
        </td>
        <td class="border p-2">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
              <path strokeLinecap="round" strokeLinejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
            </svg>
            <span class="text-sm"><%= company.users %> employees</span>
          </div>
        </td>

        <td class="border p-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 inline-block ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
          </svg>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</main>

</section>

<script>
  const gridViewButton = document.getElementById('gridViewButton');
  const tableViewButton = document.getElementById('tableViewButton');
  const gridView = document.getElementById('gridView');
  const tableView = document.getElementById('tableView');

  gridViewButton.addEventListener('click', () => {
    gridView.classList.remove('hidden');
    tableView.classList.add('hidden');
  });

  tableViewButton.addEventListener('click', () => {
    tableView.classList.remove('hidden');
    gridView.classList.add('hidden');
  });
</script>